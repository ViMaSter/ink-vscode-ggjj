{
    "name": "ink-ggjj",
    "displayName": "ink (GGJJ flavor)",
    "description": "Inkle's Ink scripting language support for Visual Studio Code with support for action lines from the Game Grumps: Joint Justice project",
    "version": "2.0.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/ViMaSter/ink-vscode-ggjj.git"
    },
    "author": {
        "name": "Vincent Mahnke",
        "email": "vincent@mahn.ke"
    },
    "license": "MIT",
    "publisher": "vincent-mahnke",
    "engines": {
        "vscode": "^1.16.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onLanguage:ink"
    ],
    "main": "./out/src/extension",
    "keywords": [
        "ink",
        "inkle",
        "syntax"
    ],
    "icon": "images/icon.png",
    "galleryBanner": {
        "color": "#F2B6FE",
        "theme": "light"
    },
    "contributes": {
        "languages": [
            {
                "id": "ink",
                "aliases": [
                    "Ink",
                    "ink"
                ],
                "extensions": [
                    ".ink",
                    ".ink2"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "ink",
                "scopeName": "source.ink",
                "path": "./syntaxes/ink.tmLanguage"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./"
    },
    "devDependencies": {
        "@types/node": "^18.7.21",
        "@types/vscode": "^1.71.0",
        "typescript": "^4.8.3"
    }
}
